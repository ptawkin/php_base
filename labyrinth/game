function renderLabyrinth()
{
    //логика генерации поля - лабиринта
    //поле - таблица 15х15
    //ячейки должны стыковаться дважды, но не по диагонали
    //у края поля стыковка может быть одна
    //ячейка-лабиринт (белая) или ячейка-пусто (закрашена)

    echo '<table>';

    for ($i = 0; $i < 15; $i++) {

        echo '<tr>';

        for ($j = 0; $j < 15; $j++) {

            echo '<td>';

            echo '</td>';

        }

        echo '</tr>';

    }

    echo '</table>';
}

